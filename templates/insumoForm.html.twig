{% extends '@CrosierLibBase/index.html.twig' %}



{% block page_content %}

    <div class="container" style="margin-bottom: 50px">
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-8">
                        <h3>Insumo</h3>
                    </div>
                    <div class="col-4 text-right">
                        <button type="button" class="btn btn-secondary"
                                onclick="window.location.href='{{ url('insumo_list') }}'">
                            <i class="fas fa-sync" aria-hidden="true"></i> Listar
                        </button>
                    </div>
                </div>

            </div>

            <div class="card-body">

                {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

                {{ form_start(form) }}


                {{ form_row(form._token) }}
                {{ form_row(form.tipoInsumo) }}
                {{ form_row(form.codigo) }}
                {{ form_row(form.marca) }}
                {{ form_row(form.descricao) }}
                {{ form_row(form.unidadeProdutoId) }}


                {{ form_row(form.precoAtual.dtCusto) }}
                {{ form_row(form.precoAtual.precoCusto) }}


                <div class="row">
                    <div class="col text-right">
                        <button type="submit" class="btn btn-primary" value="Salvar">
                            <i class="fas fa-save" aria-hidden="true"></i> Salvar
                        </button>
                    </div>
                </div>


                {{ form_end(form, {'render_rest': false}) }}


            </div>
        </div>


    </div>


{% endblock %}


{% block down_scripts %}


    <script>
        //Bind click to OK button within popup
        $('#btnYes').on(
            'click',
            function (e) {
                var modalDiv = $(e.delegateTarget);
                var url = $(this).data('url');
                var form = $('<form></form>').attr("method", "get").attr(
                    "action", url);
                $(form).appendTo('body').submit();

            });

    </script>

{% endblock %}
