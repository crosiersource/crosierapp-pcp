{% extends '@CrosierLibBase/index.html.twig' %}



{% block page_content %}


    <div class="container">
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-8">
                        <h3>Clonar Ficha Técnica</h3>
                    </div>
                </div>

            </div>

            <div class="card-body">

                <form name="formClonar"
                      action="{{ url('fichaTecnica_clonar', {'fichaTecnica' : fichaTecnicaOrigem.id}) }}"
                      method="POST">

                    <div class="form-group row">
                        <label class="col-form-label col-sm-2 required" for="fichaTecnicaOrigem">Ficha Técnica
                            (Origem)</label>
                        <div class="col-sm-10">
                            <input type="text" id="fichaTecnicaOrigem" name="fichaTecnicaOrigem" class="form-control"
                                   value="{{ fichaTecnicaOrigem.descricao }}" readonly/>

                            <input type="hidden" id="tipoArtigo" value="{{ fichaTecnicaOrigem.tipoArtigo.descricao }}"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-form-label col-sm-2 required" for="instituicao">Instituição (Destino)</label>
                        <div class="col-sm-10">
                            <select id="instituicao" name="instituicao" data-options="{{ instituicoes|default('') }}"
                                    class="form-control autoSelect2" data-val="{{ instituicaoId|default('') }}">
                            </select>
                        </div>

                    </div>


                    <div class="form-group row">
                        <label class="col-form-label col-sm-2 required" for="descricao">Descrição (Destino)</label>
                        <div class="col-sm-8">
                            <input type="text" id="descricao" name="descricao" class="form-control" value="{{ descricaoSugerida|default('') }}" >
                        </div>
                        <div class="col-sm-2 text-right">


                            <button type="button" class="btn btn-warning"
                                    data-form="formClonar"
                                    data-target="#confirmationModal" data-toggle="modal">
                                <i class="fas fa-clone" aria-hidden="true"></i> Clonar
                            </button>


                        </div>
                    </div>

                </form>


            </div>
        </div>
    </div>


{% endblock %}

{% block down_scripts %}
    <script src="{{ asset('build/fichaTecnica_clonar.js') }}"></script>
{% endblock %}