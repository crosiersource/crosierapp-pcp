{% form_theme formItem 'bootstrap_4_horizontal_layout.html.twig' %}

{{ form_start(formItem) }}
{{ form_widget(formItem) }}

<div class="row">
    <div class="col text-right">
        <button type="submit" class="btn btn-primary" value="Inserir">
            <i class="fas fa-save" aria-hidden="true"></i> Inserir
        </button>



        <div class="btn-group" role="group">
            <button id="btnGroupDrop1" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-print" aria-hidden="true"></i> Relatórios
            </button>
            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                <a class="dropdown-item" href="{{ url('loteProducao_relatorio_totalizPorTipoInsumo_HTML', {'loteProducao' : e.id}) }}" target="_blank" role="button">Totalização por Tipo (HTML)</a>
                <a class="dropdown-item" href="{{ url('loteProducao_relatorio_totalizPorTipoInsumo_PDF', {'loteProducao' : e.id}) }}" target="_blank" role="button">Totalização por Tipo (PDF)</a>
                <hr class="dropdown-item" />

            </div>
        </div>

    </div>
</div>
<div class="row">&nbsp;</div>

<table class="table table-sm table-striped table-hover table-bordered">

    {% set gradeId = 0 %}
    {% for item in e.itens %}

    {% if gradeId != item.fichaTecnica.gradeId %}
    {% set gradeId = item.fichaTecnica.gradeId %}
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Descrição</th>
        {% for i in 1..15 %}
            <th scope="col" class="text-center">{{ item.fichaTecnica.gradesTamanhosByPosicaoArray[i] }}</th>
        {% endfor %}
        <th scope="col">Total</th>
        <th scope="col"></th>
    </tr>
    </thead>
    {% endif %}
    <tbody>
    <tr>
        <td>{{ item.id }}</td>
        <td>
            <a href="{{ url('fichaTecnica_builder', {'id': item.fichaTecnica.id}) }}" target="_blank">{{ item.fichaTecnica.descricao }}</a>
            {{ item.obs != '' ? (('<br /><i style="font-size:smaller">'|raw) ~ item.obs ~ ("</i>"|raw))|raw : '' }}
        </td>
        {% for i in 1..15 %}
            <td class="text-center">{{ item.qtdesTamanhosArray[i] }}</td>
        {% endfor %}
        <td class="text-right">{{ item.totalQtdes }}</td>
        <td class="text-center">

            <a class="btn btn-primary btn-sm" href="{{ url('loteProducaoItem_form', {'loteProducaoItem': item.id}) }}"
               role="button">
                <i class="fas fa-wrench" aria-hidden="true"></i></a>

            <button type="button" class="btn btn-danger btn-sm"
                    data-url="{{ url('loteProducao_deleteItem', {'loteProducaoItem': item.id}) }}"
                    data-token="{{ csrf_token('loteProducao_deleteItem') }}" data-target="#confirmationModal"
                    data-toggle="modal">
                <i class="fa fa-trash" aria-hidden="true"></i>
            </button>
        </td>
    </tr>
    {% endfor %}
    <tr style="background-color: lightgrey">
        <th scope="row" colspan="17" class="text-right">
            Total:
        </th>
        <td class="text-right"></td>
        <td class="text-right"></td>
    </tr>
    </tbody>

</table>


</div>


{{ form_end(formItem) }}





